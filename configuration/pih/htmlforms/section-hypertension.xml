    <ifMode mode="VIEW" include="false">
        <h1>
            <uimessage code="HYPERTENSION"/>
        </h1>
        <script type="text/javascript">
            jq(function() {

            // handlers for next and submit buttons, see nextAndSubmitButtons.js
            setUpNextAndSubmitButtons();

            });
        </script>
    </ifMode>

    <!--- Patient Visit Section-->
    <section id="htn-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Visit">
        <div id="htn-form" class="section-container">

            <div class="two-columns-new">

                <!-- Type of visit -->
                <p class="side-by-side">
                    <label>
                        <uimessage code="pihcore.type_of_visit"/>
                    </label>
                    <obs conceptId="PIH:6189" style="radio"
                         answerConceptIds="PIH:1246,PIH:12612,PIH:6192"
                         answerCodes="Scheduled,Non scheduled,Urgent"/>
                </p>

                <fieldset>
                    <!-- Hypertension complications -->
                    <strong>
                        Complications related to hypertension
                    </strong>

                    <repeat>
                        <template>
                            <obsgroup groupingConceptId="PIH:14456" showIfEmpty="false">
                                <div class="two-columns">
                                    <div>
                                        <obs id="{nickname}-onset-q"
                                             conceptId="PIH:14456" answerConceptId="{category}"
                                             answerCode="{code}"
                                             style="checkbox" toggle="{nickname}-onset-date"/>
                                    </div>
                                    <div>
                                        <includeIf
                                                velocityTest="$encounter.encounterType.uuid == 'ae06d311-1866-455b-8a64-126a9bd74171'">
                                            <div id="{nickname}-onset-date">
                                                <obs conceptId="CIEL:159948" labelCode="Onset date of {code}"/>
                                            </div>
                                        </includeIf>
                                    </div>
                                </div>
                            </obsgroup>
                        </template>
                        <render category="PIH:HYPERTENSION" nickname="htn" code="Hypertension"/>
                        <render category="PIH:3405" nickname="cardiovascular_disease" code="heart attack"/>
                        <render category="PIH:7496" nickname="ischemic_heart_disease" code="Ischemic heart disease"/>
                        <render category="PIH:7483" nickname="retinopathy" code="Retinopathy"/>
                        <render category="PIH:3681" nickname="renal-failure" code="Renal failure"/>
                        <render category="CIEL:111103" nickname="stroke" code="Stroke"/>
                        <render category="PIH:7494" nickname="Peripheral-vascular-disease" code="PVD"/>
                        <render category="PIH:821" nickname="neuropathy" code="Neuropathy"/>
                        <render category="PIH:20459" nickname="erectile" code="Erectile dysfunction"/>
                    </repeat>

                    <obs conceptId="PIH:NCD category" answerConceptId="PIH:OTHER"
                         style="checkbox" toggle="other"
                         showCommentField="true" commentFieldLabel="(please specify other Complications)"/>
                    <br/>

                    <!-- Family History -->
                    <includeIf velocityTest="$encounter.encounterType.uuid == 'ae06d311-1866-455b-8a64-126a9bd74171'">
                        <strong class="inline">
                            <uimessage code="Family history "/>
                        </strong>
                        <familyHistoryRelativeCheckboxes concept="PIH:903"
                                                         relatives="PIH:FATHER,PIH:MOTHER,PIH:SIBLING,PIH:OTHER"/>
                        <obs conceptId="PIH:2889" answerConceptId="PIH:OTHER"
                             style="checkbox" toggle="other"
                             showCommentField="true" commentFieldLabel="(If other, please specify)"/>
                        <br/>

                        <!-- Family Planning -->
                        <includeIf velocityTest="$patient.gender == 'F' and $patient.age gt 14 and $patient.age lt 49">
                            <strong>
                                <uimessage code="Family Planning, if female patient 14-49 years"/>
                            </strong>
                            <div style="margin-left: 0.5em;">
                                <repeat>
                                    <template>
                                        <span style="display: block;">
                                            <obs conceptId="PIH:374" style="checkbox"
                                                 answerConceptId="{concept}" labelText="{label}"
                                                 answerLabel=""/>
                                        </span>
                                    </template>
                                    <render concept="PIH:780" label="OC (pills)"/>
                                    <render concept="PIH:907" label="Depo (Injection)"/>
                                    <render concept="PIH:1107" label="None"/>
                                </repeat>

                                <span style="display: block;">
                                    <obs conceptId="PIH:374" style="checkbox"
                                         answerConceptId="PIH:5622" labelText=""
                                         commentFieldLabel="(If other, please specify)"/>
                                </span>
                            </div>
                        </includeIf>
                    </includeIf>
                </fieldset>
            </div>
        </div>
    </section>

    <!-- Hypertension Followup Section-->
    <section id="htn-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Hypertension">
        <div id="htn-form" class="section-container">

            <div class="two-columns-new">
                <repeat>
                    <template>
                        <div class="column-item">
                            <span class="{expression}">
                                <obsgroup groupingConceptId="PIH:12389">
                                    <obs conceptId="CIEL:1728" answerConceptId="{concept}" style="checkbox"
                                         labelText="{label}" answerLabel=""
                                         toggle="{id: '{name}-htn-dx-ynu', style: 'hide'}"/>

                                    <div class="list-inline-radios" id="{name}-htn-dx-ynu">
                                        <obs conceptId="CIEL:1729"
                                             answerConceptIds="PIH:YES,PIH:NO,PIH:UNKNOWN"
                                             answerCodes="Yes,No,Unk"
                                             style="radio"/>
                                    </div>
                                </obsgroup>
                            </span>
                        </div>
                    </template>

                    <render concept="PIH:2545" name="tobacco" label="Smoke tobacco" expression="true"/>
                    <render concept="CIEL:70468" name="alcohol" label="Drink alcohol" expression="true"/>
                    <render concept="CIEL:165569" name="poor-physical-activity" label="Poor physical activity"
                            expression="true"/>
                    <render concept="PIH:PERIPHERAL NEUROPATHY" name="neuropathy" label="Neuropathy" expression="true"/>
                    <render concept="PIH:Ulcers (generic)" name="ulcers" label="Ulcers" expression="true"/>
                    <render concept="PIH:Currently taking medication" name="taking-meds" label="Took meds today?"
                            expression="true"/>
                    <render concept="CIEL:165585" name="poor-diet-adherance" label="Poor diet" expression="true"/>
                    <render concept="PIH:HYPOGLYCEMIA" name="Hypoglycemia" label="Hypoglycemia" expression="true"/>
                </repeat>
            </div>
        </div>
    </section>

