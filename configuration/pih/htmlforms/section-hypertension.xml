    <section sectionTag="fieldset" headerTag="legend" headerStyle="title" headerCode="pihcore.ncd.title">
        <div class="section-container two-column-old">
            <repeat>
                <template>
                    <div class="column">
                        <span class="{expression}">
                            <obsgroup groupingConceptId="PIH:12389">
                                <obs conceptId="CIEL:1728" answerConceptId="{concept}" style="checkbox"
                                     labelText="{label}" answerLabel="" toggle="{id: '{name}-htn-dx-ynu', style: 'hide'}"/>
                                <br/>
                                <span class="list-inline" id="{name}-htn-dx-ynu">
                                    <obs conceptId="CIEL:1729"
                                         answerConceptIds="PIH:YES,PIH:NO,PIH:UNKNOWN" style="radio"/>
                                </span>
                            </obsgroup>
                        </span>
                    </div>
                </template>

                <render concept="PIH:2545" name="tobacco" label="Smoke tobacco" expression="true"/>
                <render concept="CIEL:70468" name="alcohol" label="Drink alcohol" expression="true"/>
                <render concept="CIEL:165585" name="poor-diet-adherance" label="Poor diet" expression="true"/>
                <render concept="CIEL:165569" name="poor-physical-activity" label="Poor physical activity" expression="true"/>
                <render concept="PIH:HEADACHE" name="Headache" label="Headache" expression="true"/>
                <render concept="PIH:SHORTNESS OF BREATH WITH EXERTION" name="sob" label="Shortness of breath" expression="true"/>
                <render concept="PIH:CHEST PAIN" name="chest-pain" label="Chest pain" expression="true"/>
                <render concept="PIH:DIZZINESS" name="dizziness" label="Dizziness" expression="true"/>
                <render concept="PIH:Currently taking medication" name="taking-meds" label="Took meds today?" expression="true"/>
                <render concept="PIH:PERIPHERAL NEUROPATHY" name="neuropathy" label="Neuropathy" expression="true"/>
                <render concept="PIH:Ulcers (generic)" name="ulcers" label="Ulcers" expression="true"/>
                <render concept="PIH:HYPERTENSION" name="htn" label="Hospitalized for HTN" expression="true"/>
            </repeat>

            <div class="htn-stages:">
                <strong>
                    <uimessage code="HTN stages:"/>
                </strong>
                <div class="form-check form-check-inline">
                    <obs conceptId="PIH:12699" style="radio"
                         answerConceptIds="CIEL:165206, CIEL:165203, CIEL:165204, CIEL:165205"
                         answerCodes="Stage I, Stage II, Stage III, Stage IV" />
                </div>
            </div>

        </div>
    </section>

    <!-- Medication -->
    <section id="ncd-meds" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="pihcore.visitNote.plan.medication">
        <div class="section-container toggle">
            <table>
                <thead>
                    <tr>
                        <th>
                            <uimessage code="pihcore.visitNote.plan.name"/>
                        </th>
                        <th colspan="2">
                            <uimessage code="pihcore.visitNote.plan.dose"/>
                        </th>
                        <th>
                            <uimessage code="pihcore.drug.route"/>
                        </th>
                        <th>
                            <uimessage code="pihcore.visitNote.plan.frequency"/>
                        </th>
                        <th colspan="2">
                            <uimessage code="pihcore.visitNote.plan.duration"/>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <repeat with="['1'],['2'],['3'],['4'],['5'],['6'],['7']">
                        <tr id="medication-{0}" class="medication">
                            <obsgroup groupingConceptId="PIH:Prescription construct">
                                <td id="{0}-rx">
                                    <obs id="{0}-rx-name" class="medication-name" conceptId="CIEL:1282"
                                         style="autocomplete" answerClasses="Drug"/>
                                </td>
                                <td id="{0}-rx-dose">
                                    <obs id="dose-{0}" class="doseInput" conceptId="CIEL:160856"/>
                                </td>
                                <td id="{0}-rx-dose-unit">
                                    <obs id="{0}-doseUnit" class="doseInput select-arrow"
                                         conceptId="PIH:Dosing units coded"
                                         answerConceptIds="CIEL:161553,CIEL:162263,CIEL:1608,CIEL:1513"
                                         answerCodes="pihcore.visitNote.plan.medication.units.mg,pihcore.visitNote.plan.medication.units.mL,pihcore.visitNote.plan.medication.units.capsule,pihcore.visitNote.plan.medication.units.tablet"/>
                                </td>
                                <td id="{name}-rx-route">
                                    <obs id="route-{name}" class="route select-arrow"
                                         conceptId="PIH:12651"
                                         answerConceptIds="CIEL:160240,CIEL:160242,CIEL:160243,CIEL:160245"
                                         answerLabels="Oral,IV,IM,SubQ"/>
                                </td>
                                <td id="{0}-rx-frequency">
                                    <obs id="{0}-frequencyCoded" class="frequency select-arrow"
                                         conceptId="CIEL:160855"
                                         answerConceptIds=
                                                 "PIH:OD,PIH:BID,PIH:TID,PIH:QID,PIH:PRN,PIH:STAT,PIH:OTHER"
                                         answerCodes="QD,BID,TID,QID,STAT,PRN,pihcore.visitNote.plan.other"/>
                                </td>
                                <td id="{name}-rx-duration">
                                    <obs id="duration-{name}" class="duration doseInput" conceptId="CIEL:159368"/>
                                </td>
                                <td id="{name}-rx-duration-unit">
                                    <obs id="durationUnit-{name}" class="duration-unit select-arrow"
                                         conceptId="PIH:TIME UNITS"
                                         answerConceptIds="CIEL:1822,CIEL:1072,CIEL:1073,CIEL:1074"/>
                                </td>
                            </obsgroup>
                        </tr>
                    </repeat>
                </tbody>
            </table>
        </div>
    </section>

    <section id="ncd_plan" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="pihcore.visitNote.plan">
        <div class="section-container">
            <p>
                <label>
                    <uimessage code="pihcore.comment"/>:
                </label>
                <obs conceptId="PIH:PATIENT PLAN COMMENTS" style="textarea" rows="10"/>
            </p>

                <span class="block">
                    <label class="inline">
                        <uimessage code="pihcore.consult.returnVisitDate"/>:
                    </label>
                    <obs id="return-visit-date" conceptId="PIH:RETURN VISIT DATE" allowFutureDates="true" allowPastDates="false"
                         required="true" class="inline"/>
                </span>
        </div>
    </section>

    <div id="buttons-section"></div>
    <ifMode mode="VIEW" include="false">
        <style type="text/css">
            .ncdButtonDark.confirm, ncdButtonDark.confirm {
                background: #3f746d;
                border-color: #3f746d;
            }

            .ncdButtonLight.confirm, ncdButtonLight.confirm {
                background: #6f9792;
                border-color: #6f9792;
            }

            .ncdButtonSelf.confirm, ncdButtonSelf.confirm {
                background: #6f9792;
                border-color: #6f9792;
                color: black;
            }
        </style>

        <div id="buttonsTopRow">
            <repeat>
                <template>
                    <button id="pihcore-{idName}" type="button" class="nextSection ncdButton{buttonStyle} submitButton confirm right" >
                        <uimessage code="{label}"/>
                        <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
                    </button>
                </template>
                <render idName="ncd-plan"      buttonStyle="Dark" label="pihcore.visitNote.plan" />
                <render idName="diagnosis"     buttonStyle="Dark" label="pihcore.diagnosis.label" />
                <render idName="sickle-cell" buttonStyle="Light" label="Sickle" />
                <render idName="palliative" buttonStyle="Light" label="Palliative" />
                <render idName="liver" buttonStyle="Light" label="Liver" />
                <render idName="kidney" buttonStyle="Light" label="Kidney" />
                <render idName="lung" buttonStyle="Light" label="Lung" />
                <render idName="heart-failure" buttonStyle="Light" label="Heart" />
                <render idName="hypertension" buttonStyle="Self" label="HTN" />
                <render idName="diabetes" buttonStyle="Light" label="DM" />
            </repeat>
        </div>
        <br/><br/>

        <div id="buttons">
            <button id="next" type="button" class="submitButton confirm right">
                <uimessage code="emr.next"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="submit" class="submitButton confirm right">
                <uimessage code="mirebalais.save"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="cancel" type="button" class="cancel">
                <uimessage code="emr.cancel"/>
            </button>
        </div>
    </ifMode>

</htmlform>
