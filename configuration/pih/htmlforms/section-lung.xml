    <style type="text/css">
        <ifMode mode="VIEW" include="false">
            #family-history br {
            display: none;
            }
        </ifMode>
    </style>

    <ifMode mode="VIEW" include="false">
        <h1>
            <uimessage code="CHRONIC LUNG DISEASE"/>
        </h1>
        <script type="text/javascript">
            jq(function() {

            // handlers for next and submit buttons, see nextAndSubmitButtons.js
            setUpNextAndSubmitButtons();
            });
        </script>
    </ifMode>

    <!-- Patient Visit Section-->
    <section id="cld-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Visit">
        <div id="asthma-copd" class="section-container">

            <!-- Type of Visit -->
            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.type_of_visit"/>
                </label>
                <obs conceptId="PIH:6189" style="radio"
                     answerConceptIds="PIH:1246,PIH:12612,PIH:6192"
                     answerCodes="Scheduled,Non scheduled,Urgent"/>
            </p>

            <!-- CLD diagnoses -->
            <fieldset>
                <includeIf velocityTest="$encounter.encounterType.uuid == 'ae06d311-1866-455b-8a64-126a9bd74171'">
                    <div class="two-columns">
                        <div class="form-row">

                            <strong class="form-label">
                                <uimessage code="CLD Diagnoses "/>
                            </strong>
                            <div class="checkbox-group">
                                <repeat>
                                    <template>
                                        <obsgroup groupingConceptId="PIH:Visit Diagnoses" showIfEmpty="false">
                                            <obs conceptId="PIH:DIAGNOSIS" answerConceptId="{parId}"
                                                 answerCode="{message}"
                                                 style="checkbox"/>
                                        </obsgroup>
                                    </template>
                                    <render parId="PIH:ASTHMA" message="Asthma"/>
                                    <render parId="PIH:3716" message="COPD"/>
                                </repeat>

                                <obs conceptId="PIH:2889" answerConceptId="PIH:OTHER"
                                     style="checkbox" toggle="other"
                                     showCommentField="true" commentFieldLabel="(please specify other diagnoses)"/>
                            </div>
                        </div>

                        <!-- Treatment date -->
                        <div class="form-row">
                            <label class="form-label">
                                Date CLD treatment started
                            </label>
                            <div>
                                <obs conceptId="PIH:11131"/>
                            </div>
                        </div>
                    </div>

                    <br/>

                    <!-- Family history/involvement -->
                    <strong class="inline">
                        <uimessage code="Family history "/>
                    </strong>
                    <familyHistoryRelativeCheckboxes concept="PIH:ASTHMA"
                                                     relatives="PIH:FATHER,PIH:MOTHER,PIH:SIBLING,PIH:OTHER"/>
                    <familyHistoryRelativeCheckboxes concept="PIH:3716"
                                                     relatives="PIH:FATHER,PIH:MOTHER,PIH:SIBLING,PIH:OTHER"/>
                    <obs conceptId="PIH:2889" answerConceptId="PIH:OTHER"
                         style="checkbox" toggle="other"
                         showCommentField="true" commentFieldLabel="(If other, please specify)"/>
                </includeIf>
                <br/>

                <!-- Family Method -->
                <includeIf velocityTest="$patient.gender == 'F' and $patient.age gt 14 and $patient.age lt 49">
                <strong>
                    <uimessage code="Family Planning, if female patient 14-49 years"/>
                </strong>
                <div style="margin-left: 0.5em;">
                    <repeat>
                        <template>
                            <span style="display: block;">
                                <obs conceptId="PIH:374" style="checkbox"
                                     answerConceptId="{concept}" labelText="{label}"
                                     answerLabel=""/>
                            </span>
                        </template>
                        <render concept="PIH:780" label="OC (pills)"/>
                        <render concept="PIH:907" label="Depo (Injection)"/>
                        <render concept="PIH:1107" label="None"/>
                    </repeat>

                    <span style="display: block;">
                        <obs conceptId="PIH:374" style="checkbox"
                             answerConceptId="PIH:5622" labelText=""
                             commentFieldLabel="(If other, please specify)"/>
                    </span>
                </div>
                </includeIf>

            </fieldset>
        </div>
    </section>

    <!-- Patient Exposures Section -->
    <section id="cld-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Patient Exposures">
        <div id="asthma-copd" class="section-container">

            <div class="form-row">
                <span class="first-label-inline">

                    <!-- TB contacts -->
                    <label>
                        Has contact with a TB person?
                    </label>
                    <obs id="tb-contact" conceptId="PIH:2133" answerConceptIds="PIH:YES,PIH:NO,PIH:UNKNOWN"
                         style="radio" labelText=""/>
                    <br/>

                    <!-- Cooking fire method -->
                    <label>
                        Cooking fire method?
                    </label>
                    <obs id="cooking-method" conceptId="PIH:20889" answerConceptIds="PIH:20891,PIH:20892,PIH:20890"
                         style="radio" labelText=""/>
                    <br/>

                    <!-- Smoking -->
                    <label>
                        Smoked since last visit
                    </label>
                    <obs id="smoke-since-last-visit" conceptId="PIH:1551" answerConceptIds="PIH:1065,PIH:1066" answerLabels="Yes,No"
                         style="radio"/>
                    <br/>

                    <!-- Secondhand smoke -->
                    <label>
                        Secondhand Smoke Exposure
                    </label>
                    <obs id="secondhand-smoke" conceptId="CIEL:152721" answerConceptIds="CIEL:159450,CIEL:159452,CIEL:1090"
                         style="radio"/>
                </span>
            </div>
        </div>
    </section>

    <!-- Lung Followup -->
    <section id="cld-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Asthma/COPD">
        <div class="section-container">
            <div id="asthma-copd" class="cld-history-grid">

                <!-- Symptom frequency -->
                <span class="first-label-inline">
                    <label>
                        <uimessage code="Days per week of symptom "/>
                    </label>
                    <obs conceptId="PIH:14347" labelText="" class="inline"/>
                </span>

                <span class="first-label-inline">
                    <label>
                        <uimessage code="Nights per week of symptom "/>
                    </label>
                    <obs conceptId="PIH:14352" labelText="" class="inline"/>
                </span>

                <!-- Beta-agonist use -->
                <span class="first-label-inline">
                    <label>
                        <uimessage code="Number of beta-agonist use? "/>
                    </label>
                    <obs conceptId="PIH:7398" labelText="" class="inline"/>
                </span>

                <!-- Steroid inhaler -->
                <span class="first-label-inline">
                    <label>
                        Steroid inhaler daily?
                    </label>
                    <obs id="steroid-inhaler" conceptId="PIH:14589"
                         answerConceptIds="PIH:1065,PIH:1066"
                         answerLabels="Yes,No"
                         style="radio"/>
                </span>

                <span class="first-label-inline">
                    <repeat>
                        <template>
                            <p class="list-inline">
                                <obsgroup groupingConceptId="PIH:14875" showIfEmpty="false">
                                    <obs style="radio"
                                         conceptIds="PIH:SYMPTOM PRESENT,PIH:SYMPTOM ABSENT"
                                         conceptLabels="Yes,No"
                                         answerConceptId="{qId}" labelText="{symptName}"/>
                                </obsgroup>
                            </p>
                        </template>
                        <render qId="PIH:ASTHMA EXACERBATION" symptName="Exacerbation today?"/>
                    </repeat>
                </span>

            </div>

            <!-- Disease severity -->
            <div>
                <strong>
                    Disease Severity
                </strong>
                <repeat>
                    <template>
                        <span style="display: block;">
                            <obs conceptId="PIH:7405" style="checkbox"
                                 answerConceptId="{concept}" labelText="{label}"
                                 answerLabel=""/>
                        </span>
                    </template>
                    <render concept="PIH:7401" label="Intermittent"/>
                    <render concept="PIH:7403" label="Mild Persistent"/>
                    <render concept="PIH:7400" label="Moderate Persistent"/>
                    <render concept="PIH:7402" label="Severe Persistent"/>
                    <render concept="PIH:7404" label="Uncontrolled"/>
                </repeat>
            </div>

        </div>
    </section>

    <div id="buttons-section"></div>
    <ifMode mode="VIEW" include="false">
        <style type="text/css">
            .ncdButtonDark.confirm, ncdButtonDark.confirm {
                background: #3f746d;
                border-color: #3f746d;
            }

            .ncdButtonLight.confirm, ncdButtonLight.confirm {
                background: #6f9792;
                border-color: #6f9792;
            }

            .ncdButtonSelf.confirm, ncdButtonSelf.confirm {
                background: #6f9792;
                border-color: #6f9792;
                color: black;
            }
        </style>

        <div id="buttonsTopRow">
            <repeat>
                <template>
                    <button id="pihcore-{idName}" type="button" class="nextSection ncdButton{buttonStyle} submitButton confirm right" >
                        <uimessage code="{label}"/>
                        <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
                    </button>
                </template>
                <render idName="ncd-plan"      buttonStyle="Dark" label="pihcore.visitNote.plan" />
                <render idName="diagnosis"     buttonStyle="Dark" label="pihcore.diagnosis.label" />
                <render idName="sickle-cell"   buttonStyle="Light" label="Sickle" />
                <render idName="palliative"    buttonStyle="Light" label="Palliative" />
                <render idName="liver"         buttonStyle="Light" label="Liver" />
                <render idName="kidney"        buttonStyle="Light" label="Kidney" />
                <render idName="lung"          buttonStyle="Self" label="Lung" />
                <render idName="heart-failure" buttonStyle="Light" label="Heart" />
                <render idName="hypertension"  buttonStyle="Light" label="HTN" />
                <render idName="diabetes"      buttonStyle="Light" label="DM" />
            </repeat>
        </div>
        <br/><br/>

        <div id="buttons">
            <button id="next" type="button" class="submitButton confirm right">
                <uimessage code="emr.next"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="submit" class="submitButton confirm right">
                <uimessage code="mirebalais.save"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="cancel" type="button" class="cancel">
                <uimessage code="emr.cancel"/>
            </button>
        </div>
    </ifMode>

</htmlform>
