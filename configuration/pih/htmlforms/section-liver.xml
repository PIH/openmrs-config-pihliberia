    <ifMode mode="VIEW" include="false">
        <h1>
            <uimessage code="Liver Disease" />
        </h1>
        <script type="text/javascript">
            jq(function() {

                // handlers for next and submit buttons, see nextAndSubmitButtons.js
                setUpNextAndSubmitButtons();
            });
        </script>
    </ifMode>

    <!-- Patient Visit Section -->
    <section id="cld-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Visit">
        <div id="cirrhosis" class="section-container">

            <!-- Type of visit -->
            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.type_of_visit"/>
                </label>
                <obs conceptId="PIH:6189" style="radio"
                     answerConceptIds="PIH:1246,PIH:12612,PIH:6192"
                     answerCodes="Scheduled,Non scheduled,Urgent"/>
            </p>

            <!--Liver Diagnoses-->
            <fieldset>
                <includeIf velocityTest="$encounter.encounterType.uuid == 'ae06d311-1866-455b-8a64-126a9bd74171'">
                    <div class="two-columns">
                        <div class="form-row">

                            <strong class="form-label">
                                <uimessage code="Liver diagnoses"/>
                            </strong>
                            <div class="checkbox-group">
                                <repeat>
                                    <template>
                                        <obsgroup groupingConceptId="PIH:Visit Diagnoses" showIfEmpty="false">
                                            <obs conceptId="PIH:DIAGNOSIS" answerConceptId="{parId}"
                                                 answerCode="{message}"
                                                 style="checkbox"/>
                                        </obsgroup>
                                    </template>
                                    <render parId="PIH:3714" message="Cirrhosis"/>
                                    <render parId="PIH:903" message="Hypertension"/>
                                    <render parId="PIH:3720" message="Diabetes"/>
                                </repeat>

                                <obs conceptId="PIH:2889" answerConceptId="PIH:OTHER"
                                     style="checkbox" toggle="other"
                                     showCommentField="true" commentFieldLabel="(please specify other diagnoses)"/>
                            </div>
                        </div>

                        <!-- Treatment date -->
                        <div class="form-row">
                            <label class="form-label">
                                Date Liver treatment started
                            </label>
                            <div>
                                <obs conceptId="PIH:11131"/>
                            </div>
                        </div>
                    </div>
                </includeIf>
            </fieldset>

            <fieldset>
                <table>
                    <tbody>
                        <!--  Hep B SAg Test - Closing this! Would use if the lab module is not in used -->
                        <!--
                        <tr>
                            <obsgroup groupingConceptId="CIEL:161472">
                                <td>
                                    <label>
                                        Hep B SAg Test
                                    </label>
                                </td>
                                <td>
                                    <span class="block;">
                                        <label class="list-inline">
                                            Date:
                                        </label>
                                        <obs conceptId="PIH:12847" class="list-inline"/>
                                    </span>
                                    <span class="block;">
                                        <label>
                                            Result:
                                        </label>
                                        <obs conceptId="CIEL:161472" style="radio" class="list-inline"
                                             answerSeparator=""
                                             answerConceptIds="PIH:703, PIH:664, PIH:1138"/>
                                    </span>
                                </td>
                            </obsgroup>
                        </tr>
                        -->

                        <!-- Treated for Hep B -->
                        <tr>
                            <obsgroup groupingConceptId="PIH:14889">
                                <td>
                                    <label>
                                        Has previous treatment for Hepatitis B?
                                    </label>
                                </td>
                                <td>
                                    <obs id="hepbtreatment-radio" conceptId="PIH:14889" style="radio"
                                         class="list-inline" answerConceptIds="PIH:1065,PIH:1066"
                                         answerLabels="Yes,No">
                                        <controls>
                                            <!-- When Yes is selected show the date section -->
                                            <when value="PIH:1065" thenDisplay="#hepbtreatment-section"/>
                                        </controls>
                                    </obs>
                                    <!-- hidden by default; shown when Yes selected -->
                                    <span id="hepbtreatment-section" style="display:none">
                                        <span class="block;">
                                            <label>
                                                Date Started:
                                            </label>
                                            <obs conceptId="PIH:11131" class="list-inline"/>
                                        </span>
                                        <span class="block;">
                                            <label>
                                                Date Finished:
                                            </label>
                                            <obs conceptId="PIH:12748" class="list-inline"/>
                                        </span>
                                    </span>
                                </td>
                            </obsgroup>
                        </tr>

                        <!-- Family Medicine Method -->
                        <includeIf velocityTest="$patient.gender == 'F' and $patient.age gt 14 and $patient.age lt 49">
                            <tr>
                                <td style="width: 15%;">
                                    Family Planning, if female patient 14-49 years
                                </td>
                                <td style="width: 35%;">
                                    <repeat>
                                        <template>
                                            <span>
                                                <obs conceptId="PIH:374"
                                                     style="checkbox"
                                                     answerConceptId="{concept}"
                                                     labelText="{label}" answerLabel=""/>
                                            </span>
                                        </template>
                                        <render concept="PIH:780" label="OC (pills)"/>
                                        <render concept="PIH:907" label="Depo (Injection)"/>
                                        <render concept="PIH:1107" label="None"/>
                                    </repeat>
                                    <obs conceptId="PIH:374" answerConceptId="PIH:5622"
                                         style="checkbox" commentFieldLabel="(If other, please specify)"/>
                                </td>
                            </tr>
                        </includeIf>
                    </tbody>
                </table>
            </fieldset>

        </div>
    </section>

    <!-- Liver Disease Followup-->
    <section id="cld-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Liver Disease">
        <div id="cirrhosis" class="section-container">

            <!--Signs and symptoms-->
            <div class="two-columns-new">
                <h5>
                    <uimessage code="Signs and Symptoms"/>
                </h5>

                <repeat>
                    <template>
                        <p class="list-inline">
                            <obsgroup groupingConceptId="PIH:14875" showIfEmpty="false">
                                <obs style="radio"
                                     conceptIds="PIH:SYMPTOM PRESENT,PIH:SYMPTOM ABSENT,PIH:SYMPTOM PRESENCE UNKNOWN"
                                     conceptLabels="yes,no,unknown"
                                     answerConceptId="{qId}" labelText="{symptName}"/>
                            </obsgroup>
                        </p>
                    </template>
                    <render qId="CIEL:120345" symptName="Confusion"/>
                    <render qId="CIEL:141599" symptName="Dyspnea"/>
                    <render qId="PIH:NAUSEA" symptName="Nausea/Anorexia"/>
                    <render qId="CIEL:879" symptName="Pruritus"/>
                </repeat>
                <div class="first-label-inline">
                    <label>
                        <uimessage code="Pain scale: "/>
                    </label>
                    <obs conceptId="PIH:3604" labelText="" class="inline"/>
                </div>

                <!--Exam-->
                <div class="two-columns-new">
                    <h5>
                        <uimessage code="Exam"/>
                    </h5>

                    <repeat>
                        <template>
                            <p class="list-inline">
                                <obsgroup groupingConceptId="PIH:14875" showIfEmpty="false">
                                    <obs style="radio"
                                         conceptIds="PIH:SYMPTOM PRESENT,PIH:SYMPTOM ABSENT,PIH:SYMPTOM PRESENCE UNKNOWN"
                                         conceptLabels="yes,no,unknown"
                                         answerConceptId="{qId}" labelText="{symptName}"/>
                                </obsgroup>
                            </p>
                        </template>
                        <render qId="PIH:215" symptName="Jaundice"/>
                        <render qId="CIEL:460" symptName="Ascites"/>
                        <render qId="PIH:12704" symptName="Trace Edema"/>
                        <render qId="PIH:12492" symptName="Asterixis"/>
                    </repeat>
                    <obs conceptId="PIH:374" answerConceptId="PIH:5622"
                         style="checkbox" commentFieldLabel="Other exam findings or comments"/>
                </div>

                <!-- Risk Assessment -->
                <div class="two-columns-new">
                    <h5>
                        <uimessage code="Risk Assessment"/>
                    </h5>

                    <repeat>
                        <template>
                            <p class="list-inline">
                                <obsgroup groupingConceptId="PIH:14875" showIfEmpty="false">
                                    <obs style="radio"
                                         conceptIds="PIH:SYMPTOM PRESENT,PIH:SYMPTOM ABSENT,PIH:SYMPTOM PRESENCE UNKNOWN"
                                         conceptLabels="yes,no,unknown"
                                         answerConceptId="{qId}" labelText="{symptName}"/>
                                </obsgroup>
                            </p>
                        </template>
                        <render qId="PIH:14912" symptName="US screening past 6 months "/>
                        <render qId="CIEL:159449" symptName="Alcohol use"/>
                        <render qId="CIEL:163731" symptName="Tobacco use"/>
                        <render qId="PIH:DEPRESSION" symptName="Concerns of depression"/>
                        <render qId="PIH:Currently taking medication" symptName="taking-meds"/>
                        <render qId="CIEL:159596" symptName="Regular diet"/>
                        <render qId="PIH:Paracetamol" symptName="Taking PCM"/>
                        <render qId="CIEL:162306" symptName="Took NSAIDs"/>
                    </repeat>
                </div>

            </div>
        </div>
    </section>

    <div id="buttons-section"></div>
    <ifMode mode="VIEW" include="false">
        <style type="text/css">
            .ncdButtonDark.confirm, ncdButtonDark.confirm {
                background: #3f746d;
                border-color: #3f746d;
            }

            .ncdButtonLight.confirm, ncdButtonLight.confirm {
                background: #6f9792;
                border-color: #6f9792;
            }

            .ncdButtonSelf.confirm, ncdButtonSelf.confirm {
                background: #6f9792;
                border-color: #6f9792;
                color: black;
            }
        </style>

        <div id="buttonsTopRow">
            <repeat>
                <template>
                    <button id="pihcore-{idName}" type="button" class="nextSection ncdButton{buttonStyle} submitButton confirm right" >
                        <uimessage code="{label}"/>
                        <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
                    </button>
                </template>
                <render idName="ncd-plan"      buttonStyle="Dark" label="pihcore.visitNote.plan" />
                <render idName="diagnosis"     buttonStyle="Dark" label="pihcore.diagnosis.label" />
                <render idName="sickle-cell"   buttonStyle="Light" label="Sickle" />
                <render idName="palliative"    buttonStyle="Light" label="Palliative" />
                <render idName="liver"         buttonStyle="Self" label="Liver" />
                <render idName="kidney"        buttonStyle="Light" label="Kidney" />
                <render idName="lung"          buttonStyle="Light" label="Lung" />
                <render idName="heart-failure" buttonStyle="Light" label="Heart" />
                <render idName="hypertension"  buttonStyle="Light" label="HTN" />
                <render idName="diabetes"      buttonStyle="Light" label="DM" />
            </repeat>
        </div>
        <br/><br/>
        <div id="buttons">
            <button id="next" type="button" class="submitButton confirm right">
                <uimessage code="emr.next"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="submit" class="submitButton confirm right">
                <uimessage code="mirebalais.save"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="cancel" type="button" class="cancel">
                <uimessage code="emr.cancel"/>
            </button>
        </div>
    </ifMode>

</htmlform>
