    <section id="ep-notes" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Notes">
        <div class="section-container">
            <p>
                <obs conceptId="PIH:PATIENT PLAN COMMENTS" style="textarea" rows="10"/>
            </p>
        </div>
