<htmlform id="heart-failure"
          formName="Heart Failure" formUuid="8301277b-1062-4c15-8701-9771ac95e599"
          formVersion="1.0">

    <postSubmissionAction class="org.openmrs.module.pihcore.htmlformentry.action.CleanDiagnosisConstructAction"/>

    <style type="text/css">

        .narrow {
            width: 200px;
        }

        .field-error {
            color: #ff6666;
            font-size: 1.1em;
            display: block;
        }

        form fieldset {
            min-width: 90%;
            display: block;
        }

        .encounter-summary-container #calculated-ratio {
            font-size: 1em;
            font-weight: normal;
        }

        .half-size-text {
            color: #ff6666;
            font-size: 50%;
            display: block;
        }

        .section-container {
            background: #F2F2F2;
            box-shadow: 3px 3px 3px 1px rgba(0, 0, 0, 0.2);
            padding: 10px 5px 10px 15px;
            line-height: 1.5em; /*add this for vertical spacing between elements*/
        }

        .section-container input[type="checkbox"] {
            margin: 0px 5px; /*changed values to vertical, horizontal*/
            top:5px; /*added to offset the checkbox position to line up*/
        }

        .section-container label { /*new definition to override labels inside section-containers*/
            margin: 0px;
        }

        - .section {
            width: 100%;
        }

        textarea {
            width: 95%;
        }

        .five-columns, .four-columns, .three-columns, .two-columns {
            display: table;
            height: 100%;
            width: 100%;
        }

        .two-columns > div {
            display: table-cell;
            width: 50%;
        }

        .three-columns > div {
            display: table-cell;
            width: 33%;
        }

        .four-columns > div {
            display: table-cell;
            width: 25%;
        }

        .five-columns > div {
            display: table-cell;
            width: 20%;
        }

        .side-by-side label {
            display: inline-block;
        }

        .list-inline label, .list-inline input[type="radio"], .list-inline span,
        .list-inline-wide label, .list-inline-wide input[type="radio"], .list-inline-wide span,
        .list-inline-extra-wide label, .list-inline-extra-wide input[type="radio"], .list-inline-extra-wide span {
            display: inline-block;
            float: none;
        }

        .list-inline label:first-child {
            width: 220px;
        }

        .list-inline-wide label:first-child {
            width: 320px;
        }

        .list-inline-extra-wide label:first-child {
            width: 420px;
        }

        label {
            padding: 0px 3px 0px 0px
        }

        form input[type="radio"], .form input[type="radio"] {
            float: none;
            display: inline-block;
        }

        .nyha-classification-wrapper br {
        display: block;
        content: "";
        margin-top: 5px;
        }

        .nyha-classification-wrapper input[type="radio"] {
        float: left;
        margin-right: 10px;
        }

        .nyha-classification-wrapper label {
        display: inline-block;
        vertical-align: middle;
        }
    </style>

    <ifMode mode="VIEW" include="false">
        <h1>
            <uimessage code="Chronic Heart Failure" />
        </h1>
        <script type="text/javascript">
            jq(function() {
                // handlers for next and submit buttons, see nextAndSubmitButtons.js
                setUpNextAndSubmitButtons();
                // setUpPlanButton();
            });
        </script>
    </ifMode>

    <!-- Patient Visit Section -->
    <section id="chf-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Visit">
        <div id="heart_failure" class="section-container">

            <!-- Type of visit -->
            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.type_of_visit"/>
                </label>
                <obs conceptId="PIH:6189" style="radio"
                     answerConceptIds="PIH:1246,PIH:12612,PIH:6192"
                     answerCodes="Scheduled,Non scheduled,Urgent"/>
            </p>

            <!-- CKD diagnoses -->
            <fieldset>
                <includeIf velocityTest="$encounter.encounterType.uuid == 'ae06d311-1866-455b-8a64-126a9bd74171'">
                    <div class="two-columns">
                        <div class="form-row">

                            <strong class="form-label">
                                <uimessage code="CHF Diagnoses"/>
                            </strong>
                            <div class="checkbox-group">
                                <repeat>
                                    <template>
                                        <obsgroup groupingConceptId="PIH:11499" showIfEmpty="false">
                                            <obs conceptId="PIH:DIAGNOSIS" answerConceptId="{parId}"
                                                 answerCode="{message}"
                                                 style="checkbox"/>
                                        </obsgroup>
                                    </template>
                                    <render parId="PIH:6228" message="Dilated"/>
                                    <render parId="PIH:7497" message="Valvular"/>
                                    <render parId="PIH:221" message="Rheumatic heart disease"/>
                                    <render parId="PIH:20860" message="Restrictive"/>
                                    <render parId="PIH:3131" message="Congenital heart disease"/>
                                    <render parId="PIH:903" message="Hypertension"/>
                                    <render parId="PIH:3699" message="CKD"/>
                                    <render parId="PIH:3720" message="Diabetes"/>
                                </repeat>

                                <obs conceptId="PIH:2889" answerConceptId="PIH:OTHER"
                                     style="checkbox" toggle="other"
                                     showCommentField="true" commentFieldLabel="(please specify other diagnoses)"/>
                            </div>
                        </div>

                        <!-- Treatment date -->
                        <div class="form-row">
                            <label class="form-label">
                                Date CHF treatment started
                            </label>
                            <div>
                                <obs conceptId="PIH:11131"/>
                            </div>
                        </div>
                    </div>
                </includeIf>
                <br/>

                <!-- Family planning method -->
                <includeIf velocityTest="$patient.gender == 'F' and $patient.age gt 14 and $patient.age lt 49">
                    <strong>
                        <uimessage code="Family Planning, if female patient 14-49 years"/>
                    </strong>
                    <div style="margin-left: 0.5em;">
                        <repeat>
                            <template>
                                <span style="display: block;">
                                    <obs conceptId="PIH:374" style="checkbox"
                                         answerConceptId="{concept}" labelText="{label}"
                                         answerLabel=""/>
                                </span>
                            </template>
                            <render concept="PIH:780" label="OC (pills)"/>
                            <render concept="PIH:907" label="Depo (Injection)"/>
                            <render concept="PIH:1107" label="None"/>
                        </repeat>

                        <span style="display: block;">
                            <obs conceptId="PIH:374" style="checkbox"
                                 answerConceptId="PIH:5622" labelText=""
                                 commentFieldLabel="(If other, please specify)"/>
                        </span>
                    </div>
                </includeIf>
            </fieldset>
        </div>
    </section>

    <!-- CKF Followup Section-->
    <section id="chf-section" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="Chronic Heart Failure">
        <div id="heart_failure" class="section-container">
            <div class="two-columns-new">

                <!-- Signs and symptoms -->
                <h5>
                    <uimessage code="Signs and symptoms since last visit"/>
                </h5>
                <div>
                    <repeat>
                        <template>
                            <p class="side-by-side">
                                <obsgroup groupingConceptId="PIH:14733" showIfEmpty="false">
                                    <obs style="radio"
                                         conceptIds="PIH:SYMPTOM PRESENT,PIH:SYMPTOM ABSENT,PIH:SYMPTOM PRESENCE UNKNOWN"
                                         conceptLabels="yes,no,unknown" answerConceptId="{qId}"
                                         labelText="{symptName}"/>
                                </obsgroup>
                            </p>
                        </template>
                        <render qId="CIEL:130783" symptName="PND"/>
                        <render qId="CIEL:141599" symptName="DOE"/>
                        <render qId="PIH:3486" symptName="Orthopnea"/>
                        <render qId="PIH:COUGH" symptName="Dry cough"/>
                        <render qId="PIH:FATIGUE" symptName="Fatigue"/>
                    </repeat>
                </div>

                <!-- Exam -->
                <h5>
                    <uimessage code="Exam"/>
                </h5>
                <div class="two-columns-new">
                    <obsgroup groupingConceptId="PIH:12636">
                        <strong>
                            Body Edema
                        </strong>
                        <obs conceptId="PIH:12636" style="radio" class="list-inline"
                             answerSeparator=""
                             answerConceptIds="PIH:12704, PIH:12711, PIH:12703, PIH:12996"
                             answerLabels="Trace, 1+ Pitting, 2+ Pitting, 3+ Pitting"/>
                    </obsgroup>
                    <obs id="no-edema"
                         conceptId="PIH:12636"
                         answerConceptId="CIEL:1066" style="checkbox" class="inline first-label-inline">
                    </obs>
                </div>
                <br/>

                <div class="two-columns-new">
                    <obsgroup groupingConceptId="PIH:PATIENTS FLUID MANAGEMENT">
                        <strong>
                            Volume Status
                        </strong>
                        <obs conceptId="PIH:PATIENTS FLUID MANAGEMENT" style="radio"
                             class="list-inline"
                             answerSeparator=""
                             answerConceptIds="PIH:3272, PIH:3273, PIH:3274">
                        </obs>
                    </obsgroup>
                </div>

                <!-- Risk assessment -->
                <h5>
                    <uimessage code="Risk assessment"/>
                </h5>
                <div class="nyha-classification-wrapper">
                    <p>
                        <strong>
                            <uimessage code="pihcore.ncd.hf.nyhaClassification"/>
                        </strong>
                    </p>

                    <obs conceptId="PIH:NYHA CLASS"
                         style="radio"
                         answerConceptIds="PIH:NYHA CLASS 1,PIH:NYHA CLASS 2,PIH:NYHA CLASS 3,PIH:NYHA CLASS 4"
                         answerLabels="I (No limitations),II (Slight limitation of activity),III (Marked limitation of activity),IV (Unable to carry out any physical activity)"
                         answerSeparator="&lt;br/&gt;"/>
                </div>
                <br />

                <div>
                    <repeat>
                        <template>
                            <p class="side-by-side">
                                <obsgroup groupingConceptId="PIH:14733" showIfEmpty="false">
                                    <obs style="radio"
                                         conceptIds="PIH:SYMPTOM PRESENT,PIH:SYMPTOM ABSENT,PIH:SYMPTOM PRESENCE UNKNOWN"
                                         conceptLabels="yes,no,unknown" answerConceptId="{qId}"
                                         labelText="{symptName}"/>
                                </obsgroup>
                            </p>
                        </template>
                        <render qId="CIEL:70468" symptName="Drink alcohol"/>
                        <render qId="PIH:2545" symptName="Smoke tobacco"/>
                        <render qId="PIH:DEPRESSION" symptName="Concerns of depression"/>
                        <render qId="PIH:Currently taking medication" symptName="Took meds today"/>
                    </repeat>
                </div>

            </div>
        </div>
    </section>

    <div id="buttons-section"></div>
    <ifMode mode="VIEW" include="false">
        <style type="text/css">
            .ncdButtonDark.confirm, ncdButtonDark.confirm {
                background: #3f746d;
                border-color: #3f746d;
            }

            .ncdButtonLight.confirm, ncdButtonLight.confirm {
                background: #6f9792;
                border-color: #6f9792;
            }

            .ncdButtonSelf.confirm, ncdButtonSelf.confirm {
                background: #6f9792;
                border-color: #6f9792;
                color: black;
            }
        </style>

        <div id="buttonsTopRow">
            <repeat>
                <template>
                    <button id="pihcore-{idName}" type="button" class="nextSection ncdButton{buttonStyle} submitButton confirm right" >
                        <uimessage code="{label}"/>
                        <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
                    </button>
                </template>
                <render idName="ncd-plan"      buttonStyle="Dark" label="pihcore.visitNote.plan" />
                <render idName="diagnosis"     buttonStyle="Dark" label="pihcore.diagnosis.label" />
                <render idName="sickle-cell"   buttonStyle="Light" label="Sickle" />
                <render idName="palliative"    buttonStyle="Light" label="Palliative" />
                <render idName="liver"         buttonStyle="Light" label="Liver" />
                <render idName="kidney"        buttonStyle="Light" label="Kidney" />
                <render idName="lung"          buttonStyle="Light" label="Lung" />
                <render idName="heart-failure" buttonStyle="Self" label="Heart" />
                <render idName="hypertension"  buttonStyle="Light" label="HTN" />
                <render idName="diabetes"      buttonStyle="Light" label="DM" />
            </repeat>
        </div>
        <br/><br/>

        <div id="buttons">
            <button id="next" type="button" class="submitButton confirm right">
                <uimessage code="emr.next"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="submit" class="submitButton confirm right">
                <uimessage code="mirebalais.save"/>
                <i class="icon-spinner icon-spin icon-2x" style="display: none; margin-left: 10px;"></i>
            </button>
            <button id="cancel" type="button" class="cancel">
                <uimessage code="emr.cancel"/>
            </button>
        </div>
    </ifMode>

</htmlform>
